<div class="row">

        <!-- Blog Entries Column -->
        <div class="col-md-8">

          <h1 class="my-4" align="center">Posts Públicos</h1>
          {{#each posts as |post|}}
          <!-- Blog Post -->
              <div class="card mb-4">
                {{#ifCond post.archivo '==' 'http://via.placeholder.com/350x150'}}
                  <img height="200" src="{{post.archivo}}" alt="">
                {{else}}
                  <img height="200" src="/uploads/{{post.archivo}}" alt="">
                {{/ifCond}}
                <div class="card-body">
                  <h2 class="card-title">{{post.titulo}}</h2>
                  <p class="card-text">{{post.cuerpo}}</p>
                  <a href="/post/{{post.slug}}" class="btn btn-primary">Leer más &rarr;</a>
                </div>
                <div class="card-footer text-muted">
                  Publicado el {{post.fecha_creacion}} por
                  <a href="">{{post.usuario.nombre}}</a> Categoria: {{post.categoria.nombre}}
                </div>
              </div>
          {{/each}}

          <!-- Pagination -->
          <ul class="pagination justify-content-center mb-4">
              {{#paginacion actual=actual paginas=paginas}} 

              {{/paginacion}}
            <!--
            <li class="page-item">
              <a class="page-link" href="#">&larr; Anteriores</a>
            </li>
            <li class="page-item disabled">
              <a class="page-link" href="#">Nuevos &rarr;</a>
            </li>
            -->
          </ul>

        </div>

        <!-- Sidebar Widgets Column -->
        {{> home/sidebar}}
      </div>