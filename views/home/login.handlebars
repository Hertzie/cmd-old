<div class="card card-login mx-auto mt-5">
    {{> home/form-flash}}
    <div class="card-header">Login</div>

    <div class="card-body">
        <form action="/login" method="POST">

            <div class="form-group">
                <label for="exampleInputEmail1">Usuario</label>
                <input name="nombre_usuario" class="form-control" id="exampleInputEmail1" type="text" aria-describedby="emailHelp" placeholder="Nombre usuario">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Contraseña</label>
                <input name="password" class="form-control" id="exampleInputPassword1" type="password" placeholder="Contraseña">
            </div>
            <div class="form-group">
                <div class="form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="checkbox">Recordar contraseña</label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Login</button>
        </form>
        <div class="text-center">
            <a class="d-block small mt-3" href="/registro">Registrar una cuenta</a>
            <a class="d-block small" href="forgot-password.html">¿Olvidó la contraseña?</a>
            <a class="d-block small" href="/">Home</a>
        </div>
    </div>
</div>