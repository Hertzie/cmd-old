<div class="card card-register mx-auto mt-5">
    {{> home/form-flash}}
    <div class="card-header">Registrar una Cuenta</div>
    <div class="card-body">
        <form action="/registro" method="POST">
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-6">
                        <label for="nombre">Nombre</label>
                        <input name="nombre" required class="form-control" id="nombre" type="text" aria-describedby="nameHelp" placeholder="Nombre">
                    </div>
                    <div class="col-md-6">
                        <label for="apellido">Apellido</label>
                        <input name="apellido" required class="form-control" id="apellido" type="text" aria-describedby="nameHelp" placeholder="Apellido">
                    </div>
                    <div class="col-md-6">
                        <label for="nombre_usuario">Nombre de Usuario</label>
                        <input name="nombre_usuario" required class="form-control" id="nombre_usuario" type="text" aria-describedby="nameHelp" placeholder="Usuario">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input name="email" required class="form-control" id="email" type="email" aria-describedby="emailHelp" placeholder="Email">
            </div>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-6">
                        <label for="password">Contraseña</label>
                        <input name="password" required class="form-control" id="password" type="password" placeholder="Contraseña">
                    </div>
                    <div class="col-md-6">
                        <label for="exampleConfirmPassword">Confirmar contraseña</label>
                        <input name="passwordConfirm" required class="form-control" id="exampleConfirmPassword" type="password" placeholder="Confirm password">
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Registrarse</button>
        </form>
        <div class="text-center">
            <a class="d-block small mt-3" href="/login">Login</a>
            <a class="d-block small" href="forgot-password.html">¿Olvidó la contraseña?</a>
            <a class="d-block small" href="/">Home</a>
        </div>
    </div>
</div>